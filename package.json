{
  "name": "terminai",
  "displayName": "TerminAI",
  "description": "AI-powered terminal assistant for VS Code",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:terminai.openTerminal",
    "onCommand:terminai.executeCommand",
    "onCommand:terminai.analyzeCode"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "terminai.openTerminal",
        "title": "TerminAI: Open AI Terminal",
        "category": "TerminAI"
      },
      {
        "command": "terminai.executeCommand",
        "title": "TerminAI: Execute AI Command",
        "category": "TerminAI"
      },
      {
        "command": "terminai.analyzeCode",
        "title": "TerminAI: Analyze Current Code",
        "category": "TerminAI"
      }
    ],
    "keybindings": [
      {
        "command": "terminai.openTerminal",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "TerminAI",
      "properties": {
        "terminai.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for AI service (OpenAI, Anthropic, etc.)"
        },
        "terminai.model": {
          "type": "string",
          "default": "gpt-4",
          "description": "AI model to use for terminal assistance"
        },
        "terminai.maxTokens": {
          "type": "number",
          "default": 1000,
          "description": "Maximum tokens for AI responses"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/terminai.git"
  },
  "publisher": "your-publisher-name",
  "icon": "media/icon.png"
}
